curl https://raw.githubusercontent.com/shuvishu/docker-kafka/master/server.properties > config/server.properties
curl https://raw.githubusercontent.com/shuvishu/docker-kafka/master/zookeeper.properties > config/zookeeper.properties

sed -i "s/HOST_NAME/$(hostname -i)/g" config/server.properties
sed -i "s/HOST_NAME/$(hostname -i)/g" config/zookeeper.properties


KAFKA_LOGS_DIR="$(pwd)"
VALUE_DIR="${KAFKA_LOGS_DIR//\//\\/}"


sed -i "s/KAFKA_LOGS_DIR/$VALUE_DIR/g" config/server.properties
sed -i "s/KAFKA_LOGS_DIR/$VALUE_DIR/g" config/zookeeper.properties


./bin/zookeeper-server-start.sh config/zookeeper.properties >> zookeeper.log &

sleep 10s

echo "You could use $(hostname -i) as bootstrap server or broker in your test zookeeper is at $(hostname -i):2181"

./bin/kafka-server-start.sh config/server.properties >> kafka.log